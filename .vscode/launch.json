{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: debug server-side (dev)",
      "type": "node-terminal",
      "request": "launch",
      "env": {
        "NEXT_RUNTIME_LOG": "1"
      },
      "command": "nx dev mockingbird",
      "cwd": "${workspaceFolder}/apps/mockingbird"
    },
    {
      "name": "Next.js: debug server-side (prod)",
      "type": "node-terminal",
      "request": "launch",
      "env": {
        "NEXT_RUNTIME_LOG": "1"
      },
      "command": "nx start mockingbird",
      "cwd": "${workspaceFolder}/apps/mockingbird"
    },
    {
      "name": "Next.js: debug client-side",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "cwd": "${workspaceFolder}/apps/mockingbird"
    },
    {
      "name": "Next.js: debug full stack",
      "type": "node-terminal",
      "request": "launch",
      "env": {
        "NEXT_RUNTIME_LOG": "1"
      },
      "command": "nx dev mockingbird",
      "serverReadyAction": {
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      },
      "cwd": "${workspaceFolder}/apps/mockingbird"
    }
  ]
}