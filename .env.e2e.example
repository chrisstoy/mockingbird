# Copy this file to .env.e2e and update with your local Supabase credentials
# Get credentials from: npm run supabase:status

# Supabase Local Instance
NEXT_PUBLIC_SUPABASE_URL=http://127.0.0.1:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_URL=http://127.0.0.1:54321
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database (Local PostgreSQL from Supabase)
DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres
DIRECT_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres

# Auth (Empty for local - OAuth tests skipped)
AUTH_GITHUB_ID=
AUTH_GITHUB_SECRET=
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=
AUTH_SECRET=local-test-secret-change-in-production

# API
API_HOST=http://localhost:3000
API_PATH=/api

# Images (Local/Mock - can use existing Cloudflare or mock)
CLOUDFLARE_ACCOUNT_ID=mock
CLOUDFLARE_ACCESS_KEY_ID=mock
CLOUDFLARE_SECRET_ACCESS_KEY=mock
CLOUDFLARE_R2_BUCKET_NAME=test-bucket
IMAGES_BASE_URL=http://localhost:3000/images
IMAGES_MAX_SIZE_IN_BYTES=2097152

# Logging
LOG_LEVEL=error
LOG_DIR=logs-e2e

# Instructions:
# 1. Run: npm run supabase:start
# 2. Run: npm run supabase:status
# 3. Copy the anon key and service_role key from the output
# 4. Paste them into NEXT_PUBLIC_SUPABASE_ANON_KEY, SUPABASE_ANON_KEY, and SUPABASE_SERVICE_ROLE_KEY above
# 5. Save this file as .env.e2e (without the .example extension)
# 6. Run: npm run test:e2e
