generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")      // Pooled connection (port 6543) via pgBouncer
  directUrl = env("DIRECT_URL")        // Direct connection (port 5432) for migrations
}

// User table - Read-only cache of Supabase auth.users
// Automatically synced via PostgreSQL triggers on auth.users
// Source of truth: auth.users in Supabase Auth
//
// Sync mechanism: PostgreSQL triggers automatically maintain this table
// - on_auth_user_created: Inserts User when auth.users row created
// - on_auth_user_updated: Updates User when auth.users metadata changes
// - on_auth_user_deleted: Deletes User when auth.users row deleted
//
// DO NOT write to this table directly - use Supabase Admin API to modify auth.users
model User {
  id    String  @id @db.Uuid // Supabase Auth UUID (synced from auth.users.id)
  name  String  // Synced from auth.users.raw_user_meta_data->>'name'
  email String? @unique // Synced from auth.users.email
  image String? // Synced from auth.users.raw_user_meta_data->>'avatar_url'

  posts   Post[]
  friends Friends[]
  images  Image[]
  albums  Album[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// #region Mockingbird
enum DocumentType {
  TOC // Table of Contents
  PRIVACY // Privacy Policy
}

model Document {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  type      DocumentType // type of document (e.g., TOC, Privacy Policy)
  creatorId String       @db.Uuid // user that created this document
  version   Int // version of the document
  content   String // content of the document
}

enum Audience {
  PUBLIC // anyone can see this post
  PRIVATE // only people on user's friends list can see this post
}

model Post {
  id               String   @id @default(cuid())
  posterId         String   @db.Uuid
  responseToPostId String?
  audience         Audience @default(PUBLIC)
  content          String
  likeCount        Int      @default(0)
  dislikeCount     Int      @default(0)
  imageId          String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  poster User @relation(fields: [posterId], references: [id], onDelete: Cascade)

  responseTo Post?  @relation("Responses", fields: [responseToPostId], references: [id], onDelete: Cascade)
  responses  Post[] @relation("Responses")

  image Image? @relation(fields: [imageId], references: [id], onDelete: SetNull)
}

model Friends {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId   String  @db.Uuid // user who makes the friend request
  friendId String  @db.Uuid // user to be friends with
  accepted Boolean // true if the friendship is accepted

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Image {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ownerId String  @db.Uuid // user that owns this image
  owner   User    @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  imageUrl     String // URL to the original version of the image
  thumbnailUrl String // URL to a small, thumbnail version of the image

  description String
  albumId     String?

  album Album? @relation(fields: [albumId], references: [id], onDelete: SetNull)

  posts Post[] // posts that reference this image
}

model Album {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ownerId String  @db.Uuid
  owner   User    @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  name    String

  images Image[] // images in this album
}

// #endregion
